<h1>Create a new project</h1>

<%= form_for(@project) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <p>Rewards</p>
  <%= f.fields_for :rewards do |r| %>
    <%= render 'reward_fields', :f => r %>
  <% end %>
  <%= link_to_add_association 'add reward', f, :rewards %>
  <%= f.submit %>
<% end %>